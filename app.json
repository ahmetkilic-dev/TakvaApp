{
  "expo": {
    "name": "TakvaApp",
    "slug": "TakvaApp",
    "scheme": "takvaapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#04100D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sizinadiniz.takvaapp", 
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Namaz vakitlerini doğru hesaplamak için konumunuz gereklidir.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true // AĞ KISITLAMALARINI ESNETİR
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#04100D"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sizinadiniz.takvaapp", 
      "permissions": [
        "INTERNET", 
        "ACCESS_FINE_LOCATION" 
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "buraya-eas-project-id-gelecek" 
      }
    }
  }
}