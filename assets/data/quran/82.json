{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "englishName": "Al-Infitaar",
  "englishNameTranslation": "The Cleaving",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 5830,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ",
      "numberInSurah": 1,
      "juz": 30,
      "page": 587,
      "translation": "Gök çatladığı vakit,"
    },
    {
      "number": 5831,
      "text": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ",
      "numberInSurah": 2,
      "juz": 30,
      "page": 587,
      "translation": "Yıldızlar döküldüğü vakit,"
    },
    {
      "number": 5832,
      "text": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ",
      "numberInSurah": 3,
      "juz": 30,
      "page": 587,
      "translation": "Denizler yarılıp akıtıldığı vakit,"
    },
    {
      "number": 5833,
      "text": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ",
      "numberInSurah": 4,
      "juz": 30,
      "page": 587,
      "translation": "Kabirlerin içi dışına getirildiği vakit,"
    },
    {
      "number": 5834,
      "text": "عَلِمَتْ نَفْسٌۭ مَّا قَدَّمَتْ وَأَخَّرَتْ",
      "numberInSurah": 5,
      "juz": 30,
      "page": 587,
      "translation": "Herkes neyi önünden gönderdiğini ve neyi geri bıraktığını bilir."
    },
    {
      "number": 5835,
      "text": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ",
      "numberInSurah": 6,
      "juz": 30,
      "page": 587,
      "translation": "Ey insan! İhsanı bol Rabb'ine karşı seni aldatan nedir?"
    },
    {
      "number": 5836,
      "text": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
      "numberInSurah": 7,
      "juz": 30,
      "page": 587,
      "translation": "O Allah ki seni yarattı, seni düzgün yapılı kılıp ölçülü bir biçim verdi."
    },
    {
      "number": 5837,
      "text": "فِىٓ أَىِّ صُورَةٍۢ مَّا شَآءَ رَكَّبَكَ",
      "numberInSurah": 8,
      "juz": 30,
      "page": 587,
      "translation": "Seni dilediği her hangi bir şekilde parçalardan oluşturdu."
    },
    {
      "number": 5838,
      "text": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ",
      "numberInSurah": 9,
      "juz": 30,
      "page": 587,
      "translation": "Hayır hayır, siz cezayı yalanlıyorsunuz."
    },
    {
      "number": 5839,
      "text": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ",
      "numberInSurah": 10,
      "juz": 30,
      "page": 587,
      "translation": "Oysa üzerinizde koruyucular var."
    },
    {
      "number": 5840,
      "text": "كِرَامًۭا كَٰتِبِينَ",
      "numberInSurah": 11,
      "juz": 30,
      "page": 587,
      "translation": "Değerli yazıcılar"
    },
    {
      "number": 5841,
      "text": "يَعْلَمُونَ مَا تَفْعَلُونَ",
      "numberInSurah": 12,
      "juz": 30,
      "page": 587,
      "translation": "Onlar, siz her ne yaparsanız bilirler"
    },
    {
      "number": 5842,
      "text": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍۢ",
      "numberInSurah": 13,
      "juz": 30,
      "page": 587,
      "translation": "Kuşkusuz iyiler nimet içindedirler."
    },
    {
      "number": 5843,
      "text": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍۢ",
      "numberInSurah": 14,
      "juz": 30,
      "page": 587,
      "translation": "Kötüler de cehennemdedirler."
    },
    {
      "number": 5844,
      "text": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ",
      "numberInSurah": 15,
      "juz": 30,
      "page": 587,
      "translation": "Ceza günü ona girecekler."
    },
    {
      "number": 5845,
      "text": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ",
      "numberInSurah": 16,
      "juz": 30,
      "page": 587,
      "translation": "Onlar o cehennemin gözünden kaçamazlar."
    },
    {
      "number": 5846,
      "text": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
      "numberInSurah": 17,
      "juz": 30,
      "page": 587,
      "translation": "Ceza gününün ne olduğunu sen bilir misin?"
    },
    {
      "number": 5847,
      "text": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
      "numberInSurah": 18,
      "juz": 30,
      "page": 587,
      "translation": "Evet, bilir misin nedir acaba o ceza günü?"
    },
    {
      "number": 5848,
      "text": "يَوْمَ لَا تَمْلِكُ نَفْسٌۭ لِّنَفْسٍۢ شَيْـًۭٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍۢ لِّلَّهِ",
      "numberInSurah": 19,
      "juz": 30,
      "page": 587,
      "translation": "O gün, hiç kimsenin başkası için hiçbir şeye sahip olamadığı gündür. O gün buyruk yalnız Allah'ındır."
    }
  ]
}