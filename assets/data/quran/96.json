{
  "number": 96,
  "name": "سُورَةُ العَلَقِ",
  "englishName": "Al-Alaq",
  "englishNameTranslation": "The Clot",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6107,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ ٱقْرَأْ بِٱسْمِ رَبِّكَ ٱلَّذِى خَلَقَ",
      "numberInSurah": 1,
      "juz": 30,
      "page": 597,
      "translation": "Yaratan Rabbinin adıyla oku!"
    },
    {
      "number": 6108,
      "text": "خَلَقَ ٱلْإِنسَٰنَ مِنْ عَلَقٍ",
      "numberInSurah": 2,
      "juz": 30,
      "page": 597,
      "translation": "O, insanı bir alekadan (embriyodan) yarattı."
    },
    {
      "number": 6109,
      "text": "ٱقْرَأْ وَرَبُّكَ ٱلْأَكْرَمُ",
      "numberInSurah": 3,
      "juz": 30,
      "page": 597,
      "translation": "Oku! Rabbin sonsuz kerem sahibidir."
    },
    {
      "number": 6110,
      "text": "ٱلَّذِى عَلَّمَ بِٱلْقَلَمِ",
      "numberInSurah": 4,
      "juz": 30,
      "page": 597,
      "translation": "O Rab ki kalemle yazmayı öğretti."
    },
    {
      "number": 6111,
      "text": "عَلَّمَ ٱلْإِنسَٰنَ مَا لَمْ يَعْلَمْ",
      "numberInSurah": 5,
      "juz": 30,
      "page": 597,
      "translation": "İnsana bilmediği şeyleri öğretti."
    },
    {
      "number": 6112,
      "text": "كَلَّآ إِنَّ ٱلْإِنسَٰنَ لَيَطْغَىٰٓ",
      "numberInSurah": 6,
      "juz": 30,
      "page": 597,
      "translation": "Hayır! Doğrusu (kâfir) insan azgınlık eder."
    },
    {
      "number": 6113,
      "text": "أَن رَّءَاهُ ٱسْتَغْنَىٰٓ",
      "numberInSurah": 7,
      "juz": 30,
      "page": 597,
      "translation": "Kendisinin muhtaç olmadığını zannettiği için."
    },
    {
      "number": 6114,
      "text": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجْعَىٰٓ",
      "numberInSurah": 8,
      "juz": 30,
      "page": 597,
      "translation": "Muhakkak ki dönüş mutlaka Rabbinedir."
    },
    {
      "number": 6115,
      "text": "أَرَءَيْتَ ٱلَّذِى يَنْهَىٰ",
      "numberInSurah": 9,
      "juz": 30,
      "page": 597,
      "translation": "Namaz kıldığı zaman, bir kulu engelleyeni gördün mü?"
    },
    {
      "number": 6116,
      "text": "عَبْدًا إِذَا صَلَّىٰٓ",
      "numberInSurah": 10,
      "juz": 30,
      "page": 597,
      "translation": "Namaz kıldığı zaman, bir kulu engelleyeni gördün mü?"
    },
    {
      "number": 6117,
      "text": "أَرَءَيْتَ إِن كَانَ عَلَى ٱلْهُدَىٰٓ",
      "numberInSurah": 11,
      "juz": 30,
      "page": 597,
      "translation": "Gördün mü (ne dersin?), ya o (kul) doğru yolda olur,"
    },
    {
      "number": 6118,
      "text": "أَوْ أَمَرَ بِٱلتَّقْوَىٰٓ",
      "numberInSurah": 12,
      "juz": 30,
      "page": 597,
      "translation": "Veya kötülüklerden sakınmayı emrederse?"
    },
    {
      "number": 6119,
      "text": "أَرَءَيْتَ إِن كَذَّبَ وَتَوَلَّىٰٓ",
      "numberInSurah": 13,
      "juz": 30,
      "page": 597,
      "translation": "Gördün mü, ya bu (adam, hakkı) yalanlar, yüzçevirirse,"
    },
    {
      "number": 6120,
      "text": "أَلَمْ يَعْلَم بِأَنَّ ٱللَّهَ يَرَىٰ",
      "numberInSurah": 14,
      "juz": 30,
      "page": 597,
      "translation": "O adam, Allah'ın kendini gördüğünü hiç bilmiyor mu?"
    },
    {
      "number": 6121,
      "text": "كَلَّا لَئِن لَّمْ يَنتَهِ لَنَسْفَعًۢا بِٱلنَّاصِيَةِ",
      "numberInSurah": 15,
      "juz": 30,
      "page": 597,
      "translation": "Hayır, hayır! Eğer o, bu davranışından vazgeçmezse, and olsun ki biz, onu perçeminden, o günahkâr ve yalancı perçeminden tutup cehenneme sürükleriz."
    },
    {
      "number": 6122,
      "text": "نَاصِيَةٍۢ كَٰذِبَةٍ خَاطِئَةٍۢ",
      "numberInSurah": 16,
      "juz": 30,
      "page": 597,
      "translation": "Hayır, hayır! Eğer o, bu davranışından vazgeçmezse, and olsun ki biz, onu perçeminden, o günahkâr ve yalancı perçeminden tutup cehenneme sürükleriz."
    },
    {
      "number": 6123,
      "text": "فَلْيَدْعُ نَادِيَهُۥ",
      "numberInSurah": 17,
      "juz": 30,
      "page": 597,
      "translation": "O zaman o taraftarlarını yardıma çağırsın."
    },
    {
      "number": 6124,
      "text": "سَنَدْعُ ٱلزَّبَانِيَةَ",
      "numberInSurah": 18,
      "juz": 30,
      "page": 597,
      "translation": "Biz de Zebanileri çağıracağız."
    },
    {
      "number": 6125,
      "text": "كَلَّا لَا تُطِعْهُ وَٱسْجُدْ وَٱقْتَرِب ۩",
      "numberInSurah": 19,
      "juz": 30,
      "page": 597,
      "translation": "Sakın onu dinleme de (Rabbine) secde et ve yaklaş."
    }
  ]
}