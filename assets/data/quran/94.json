{
  "number": 94,
  "name": "سُورَةُ الشَّرۡحِ",
  "englishName": "Ash-Sharh",
  "englishNameTranslation": "The Consolation",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6091,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ أَلَمْ نَشْرَحْ لَكَ صَدْرَكَ",
      "numberInSurah": 1,
      "juz": 30,
      "page": 596,
      "translation": "Biz senin için (mutluluğun) göğsünü açmadık mı?"
    },
    {
      "number": 6092,
      "text": "وَوَضَعْنَا عَنكَ وِزْرَكَ",
      "numberInSurah": 2,
      "juz": 30,
      "page": 596,
      "translation": "Senden yükünü indirmedik mi?"
    },
    {
      "number": 6093,
      "text": "ٱلَّذِىٓ أَنقَضَ ظَهْرَكَ",
      "numberInSurah": 3,
      "juz": 30,
      "page": 596,
      "translation": "O senin sırtını ezen yükü."
    },
    {
      "number": 6094,
      "text": "وَرَفَعْنَا لَكَ ذِكْرَكَ",
      "numberInSurah": 4,
      "juz": 30,
      "page": 596,
      "translation": "Senin şanını yüceltmedik mi?"
    },
    {
      "number": 6095,
      "text": "فَإِنَّ مَعَ ٱلْعُسْرِ يُسْرًا",
      "numberInSurah": 5,
      "juz": 30,
      "page": 596,
      "translation": "Demek ki, zorlukla beraber bir kolaylık vardır."
    },
    {
      "number": 6096,
      "text": "إِنَّ مَعَ ٱلْعُسْرِ يُسْرًۭا",
      "numberInSurah": 6,
      "juz": 30,
      "page": 596,
      "translation": "Evet, zorlukla beraber bir kolaylık vardır."
    },
    {
      "number": 6097,
      "text": "فَإِذَا فَرَغْتَ فَٱنصَبْ",
      "numberInSurah": 7,
      "juz": 30,
      "page": 596,
      "translation": "O halde boş kaldın mı, yine kalk (başka bir iş ve ibadetle) yorul."
    },
    {
      "number": 6098,
      "text": "وَإِلَىٰ رَبِّكَ فَٱرْغَب",
      "numberInSurah": 8,
      "juz": 30,
      "page": 596,
      "translation": "Ancak Rabbine yönel."
    }
  ]
}