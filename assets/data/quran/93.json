{
  "number": 93,
  "name": "سُورَةُ الضُّحَىٰ",
  "englishName": "Ad-Dhuhaa",
  "englishNameTranslation": "The Morning Hours",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6080,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ وَٱلضُّحَىٰ",
      "numberInSurah": 1,
      "juz": 30,
      "page": 596,
      "translation": "Andolsun kuşluk vaktine."
    },
    {
      "number": 6081,
      "text": "وَٱلَّيْلِ إِذَا سَجَىٰ",
      "numberInSurah": 2,
      "juz": 30,
      "page": 596,
      "translation": "Ve sakinleştiği zaman geceye ki,"
    },
    {
      "number": 6082,
      "text": "مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ",
      "numberInSurah": 3,
      "juz": 30,
      "page": 596,
      "translation": "Rabbin seni bırakmadı ve darılmadı."
    },
    {
      "number": 6083,
      "text": "وَلَلْءَاخِرَةُ خَيْرٌۭ لَّكَ مِنَ ٱلْأُولَىٰ",
      "numberInSurah": 4,
      "juz": 30,
      "page": 596,
      "translation": "Ahiret senin için dünyadan iyi olacaktır."
    },
    {
      "number": 6084,
      "text": "وَلَسَوْفَ يُعْطِيكَ رَبُّكَ فَتَرْضَىٰٓ",
      "numberInSurah": 5,
      "juz": 30,
      "page": 596,
      "translation": "Rabbın sana verecek ve sen hoşnut olacaksın."
    },
    {
      "number": 6085,
      "text": "أَلَمْ يَجِدْكَ يَتِيمًۭا فَـَٔاوَىٰ",
      "numberInSurah": 6,
      "juz": 30,
      "page": 596,
      "translation": "O seni yetim bulup da barındırmadı mı?"
    },
    {
      "number": 6086,
      "text": "وَوَجَدَكَ ضَآلًّۭا فَهَدَىٰ",
      "numberInSurah": 7,
      "juz": 30,
      "page": 596,
      "translation": "Seni yol bilmez bulup yola iletmedi mi?"
    },
    {
      "number": 6087,
      "text": "وَوَجَدَكَ عَآئِلًۭا فَأَغْنَىٰ",
      "numberInSurah": 8,
      "juz": 30,
      "page": 596,
      "translation": "Seni yoksul bulup zengin etmedi mi?"
    },
    {
      "number": 6088,
      "text": "فَأَمَّا ٱلْيَتِيمَ فَلَا تَقْهَرْ",
      "numberInSurah": 9,
      "juz": 30,
      "page": 596,
      "translation": "Öyleyse sakın yetimi ezme."
    },
    {
      "number": 6089,
      "text": "وَأَمَّا ٱلسَّآئِلَ فَلَا تَنْهَرْ",
      "numberInSurah": 10,
      "juz": 30,
      "page": 596,
      "translation": "Dilenciyi de azarlama."
    },
    {
      "number": 6090,
      "text": "وَأَمَّا بِنِعْمَةِ رَبِّكَ فَحَدِّثْ",
      "numberInSurah": 11,
      "juz": 30,
      "page": 596,
      "translation": "Fakat Rabbinin nimetini anlat da anlat."
    }
  ]
}