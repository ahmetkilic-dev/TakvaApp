{
  "number": 90,
  "name": "سُورَةُ البَلَدِ",
  "englishName": "Al-Balad",
  "englishNameTranslation": "The City",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6024,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ لَآ أُقْسِمُ بِهَٰذَا ٱلْبَلَدِ",
      "numberInSurah": 1,
      "juz": 30,
      "page": 594,
      "translation": "Andolsun bu beldeye"
    },
    {
      "number": 6025,
      "text": "وَأَنتَ حِلٌّۢ بِهَٰذَا ٱلْبَلَدِ",
      "numberInSurah": 2,
      "juz": 30,
      "page": 594,
      "translation": "Ki sen bu beldede oturmaktasın."
    },
    {
      "number": 6026,
      "text": "وَوَالِدٍۢ وَمَا وَلَدَ",
      "numberInSurah": 3,
      "juz": 30,
      "page": 594,
      "translation": "Ve and olsun baba ve çocuğuna."
    },
    {
      "number": 6027,
      "text": "لَقَدْ خَلَقْنَا ٱلْإِنسَٰنَ فِى كَبَدٍ",
      "numberInSurah": 4,
      "juz": 30,
      "page": 594,
      "translation": "Biz insanı gerçekten bir sıkıntı içinde yarattık."
    },
    {
      "number": 6028,
      "text": "أَيَحْسَبُ أَن لَّن يَقْدِرَ عَلَيْهِ أَحَدٌۭ",
      "numberInSurah": 5,
      "juz": 30,
      "page": 594,
      "translation": "İnsan, kendisine karşı kimse güç yetiremez mi sanıyor?"
    },
    {
      "number": 6029,
      "text": "يَقُولُ أَهْلَكْتُ مَالًۭا لُّبَدًا",
      "numberInSurah": 6,
      "juz": 30,
      "page": 594,
      "translation": "Ben, yığın yığın mal yok ettim diyor."
    },
    {
      "number": 6030,
      "text": "أَيَحْسَبُ أَن لَّمْ يَرَهُۥٓ أَحَدٌ",
      "numberInSurah": 7,
      "juz": 30,
      "page": 594,
      "translation": "Kendisini bir gören olmadı mı sanıyor?"
    },
    {
      "number": 6031,
      "text": "أَلَمْ نَجْعَل لَّهُۥ عَيْنَيْنِ",
      "numberInSurah": 8,
      "juz": 30,
      "page": 594,
      "translation": "Biz ona iki göz vermedik mi?"
    },
    {
      "number": 6032,
      "text": "وَلِسَانًۭا وَشَفَتَيْنِ",
      "numberInSurah": 9,
      "juz": 30,
      "page": 594,
      "translation": "Bir dil ve iki dudak?"
    },
    {
      "number": 6033,
      "text": "وَهَدَيْنَٰهُ ٱلنَّجْدَيْنِ",
      "numberInSurah": 10,
      "juz": 30,
      "page": 594,
      "translation": "Ona iki yolu gösterdik."
    },
    {
      "number": 6034,
      "text": "فَلَا ٱقْتَحَمَ ٱلْعَقَبَةَ",
      "numberInSurah": 11,
      "juz": 30,
      "page": 594,
      "translation": "Fakat o, o sarp yokuşa göğüs veremedi."
    },
    {
      "number": 6035,
      "text": "وَمَآ أَدْرَىٰكَ مَا ٱلْعَقَبَةُ",
      "numberInSurah": 12,
      "juz": 30,
      "page": 594,
      "translation": "Bildin mi sen, o sarp yokuş nedir?"
    },
    {
      "number": 6036,
      "text": "فَكُّ رَقَبَةٍ",
      "numberInSurah": 13,
      "juz": 30,
      "page": 594,
      "translation": "Köle azat etmek,"
    },
    {
      "number": 6037,
      "text": "أَوْ إِطْعَٰمٌۭ فِى يَوْمٍۢ ذِى مَسْغَبَةٍۢ",
      "numberInSurah": 14,
      "juz": 30,
      "page": 594,
      "translation": "Veya salgın bir kıtlık gününde yemek yedirmektir,"
    },
    {
      "number": 6038,
      "text": "يَتِيمًۭا ذَا مَقْرَبَةٍ",
      "numberInSurah": 15,
      "juz": 30,
      "page": 594,
      "translation": "Yakınlığı olan bir yetime,"
    },
    {
      "number": 6039,
      "text": "أَوْ مِسْكِينًۭا ذَا مَتْرَبَةٍۢ",
      "numberInSurah": 16,
      "juz": 30,
      "page": 594,
      "translation": "Veya hiçbir şeyi olmayan yoksula."
    },
    {
      "number": 6040,
      "text": "ثُمَّ كَانَ مِنَ ٱلَّذِينَ ءَامَنُوا۟ وَتَوَاصَوْا۟ بِٱلصَّبْرِ وَتَوَاصَوْا۟ بِٱلْمَرْحَمَةِ",
      "numberInSurah": 17,
      "juz": 30,
      "page": 594,
      "translation": "Sonra da iman edip de sabrı tavsiye eden ve merhamet tavsiye edenlerden olmaktır."
    },
    {
      "number": 6041,
      "text": "أُو۟لَٰٓئِكَ أَصْحَٰبُ ٱلْمَيْمَنَةِ",
      "numberInSurah": 18,
      "juz": 30,
      "page": 594,
      "translation": "İşte bunlar, amel defterleri sağlarından verilenlerdir."
    },
    {
      "number": 6042,
      "text": "وَٱلَّذِينَ كَفَرُوا۟ بِـَٔايَٰتِنَا هُمْ أَصْحَٰبُ ٱلْمَشْـَٔمَةِ",
      "numberInSurah": 19,
      "juz": 30,
      "page": 594,
      "translation": "Âyetlerimizi tanımayanlar ise, onlardır işte amel defterleri sollarından verilenler."
    },
    {
      "number": 6043,
      "text": "عَلَيْهِمْ نَارٌۭ مُّؤْصَدَةٌۢ",
      "numberInSurah": 20,
      "juz": 30,
      "page": 594,
      "translation": "Onların üzerlerine bir ateş bastırılıp kapıları kapanacaktır."
    }
  ]
}