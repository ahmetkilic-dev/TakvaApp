{
  "number": 1,
  "name": "سُورَةُ ٱلْفَاتِحَةِ",
  "englishName": "Al-Faatiha",
  "englishNameTranslation": "The Opening",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 1,
      "text": "﻿بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ",
      "numberInSurah": 1,
      "juz": 1,
      "page": 1,
      "translation": "Rahmân ve Rahîm olan Allah'ın ismiyle."
    },
    {
      "number": 2,
      "text": "ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَٰلَمِينَ",
      "numberInSurah": 2,
      "juz": 1,
      "page": 1,
      "translation": "Hamd o âlemlerin Rabbi,"
    },
    {
      "number": 3,
      "text": "ٱلرَّحْمَٰنِ ٱلرَّحِيمِ",
      "numberInSurah": 3,
      "juz": 1,
      "page": 1,
      "translation": "O Rahmân ve Rahim,"
    },
    {
      "number": 4,
      "text": "مَٰلِكِ يَوْمِ ٱلدِّينِ",
      "numberInSurah": 4,
      "juz": 1,
      "page": 1,
      "translation": "O, din gününün maliki Allah'ın."
    },
    {
      "number": 5,
      "text": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
      "numberInSurah": 5,
      "juz": 1,
      "page": 1,
      "translation": "Ancak sana ederiz kulluğu, ibadeti ve ancak senden dileriz yardımı, inayeti. (Ya Rab!)."
    },
    {
      "number": 6,
      "text": "ٱهْدِنَا ٱلصِّرَٰطَ ٱلْمُسْتَقِيمَ",
      "numberInSurah": 6,
      "juz": 1,
      "page": 1,
      "translation": "Hidayet eyle bizi doğru yola,"
    },
    {
      "number": 7,
      "text": "صِرَٰطَ ٱلَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ ٱلْمَغْضُوبِ عَلَيْهِمْ وَلَا ٱلضَّآلِّينَ",
      "numberInSurah": 7,
      "juz": 1,
      "page": 1,
      "translation": "O kendilerine nimet verdiğin mutlu kimselerin yoluna; o gazaba uğramışların ve o sapmışların yoluna değil."
    }
  ]
}